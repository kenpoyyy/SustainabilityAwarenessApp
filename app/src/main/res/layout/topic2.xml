<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Topic2">

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="482dp"
        android:layout_height="298dp"
        android:layout_marginTop="-4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ellipse_1" />

    <ImageView
        android:id="@+id/backbtn_topic2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backleft" />

    <TextView
        android:id="@+id/topic2title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:text="The Importance of Sustainable Farming for a Greener Future"
        android:fontFamily="@font/ralewaybold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/topic2frame"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic2title">

        <VideoView
            android:id="@+id/topic2video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topic2frame"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic2desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:gravity="center"
                android:fontFamily="@font/ralewayregular"
                android:text="Sustainable farming practices are the key to a greener, more resilient future. With the growing global population increasing the demand for food, it's crucial to protect our natural resources. In this post, we'll explore the significance of sustainable farming." />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <ImageView
                    android:id="@+id/smallicon2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/leaf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topic2desc"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/topic2Header1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-5dp"
                    android:text="The Problems with Conventional Agriculture:"
                    android:textSize="20dp"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smallicon2"
                    app:layout_constraintTop_toTopOf="@id/smallicon2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/topic2Content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="Conventional agriculture has produced a lot of food but at a substantial environmental cost due to its heavy reliance on pesticides, monoculture farming, and excessive water use. Negative effects include soil erosion, biodiversity loss, and chemical discharge into waterways." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/smallicon3"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/leaf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topic2desc"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/topic2Header2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Sustainability Farming Principles:"
                    android:textSize="20dp"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smallicon3"
                    app:layout_constraintTop_toTopOf="@id/smallicon3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/topic2SubHead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="Sustainability in Agriculture:"
                android:textSize="15sp"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2SubHead2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="1. Crop rotation:"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2Content2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="A practice used by sustainable farmers to enhance soil health and lessen the demand for synthetic fertilisers. The life cycles of pests and illnesses are also disrupted by this technology." />

            <TextView
                android:id="@+id/topic2SubHead3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="2. Organic farming:"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2Content3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="Using natural methods for pest management and soil enrichment, organic farming stays away from synthetic pesticides and fertilisers." />

            <TextView
                android:id="@+id/topic2SubHead4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="3. Conservation Agriculture:"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2Content4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="This strategy uses as little soil disturbance as possible, which aids in moisture retention and lessens erosion. Mulching and cover crops are also encouraged." />

            <TextView
                android:id="@+id/topic2SubHead5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="4. Agroforestry:"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2Content5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="Including trees in farming practices can improve soil fertility, store carbon, and create habitats for wildlife." />

            <TextView
                android:id="@+id/topic2SubHead6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="5. Water Management:"
                android:fontFamily="@font/ralewaybold" />

            <TextView
                android:id="@+id/topic2Content6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="Responsible water use in agriculture involves strategies like drip irrigation and rainwater collection." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/smallicon4"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/leaf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topic2desc"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/topic2Header3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Environmental and Social Benefits:"
                    android:textSize="20dp"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smallicon4"
                    app:layout_constraintTop_toTopOf="@id/smallicon4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/topic2Content7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="A variety of environmental and social advantages are provided by sustainable agricultural practices. They safeguard biodiversity, improve soil health, lower greenhouse gas emissions, and conserve water.\n\nAdditionally, boosting food security, building economic resilience, and supporting local communities are all common components of sustainable farming." />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/smallicon5"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/leaf"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/topic2desc"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/topic2Header4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="The Consumer's Role:"
                    android:textSize="20dp"
                    android:fontFamily="@font/ralewaybold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smallicon5"
                    app:layout_constraintTop_toTopOf="@id/smallicon5" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/topic2Content8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/ralewayregular"
                android:text="We can significantly contribute to the support of sustainable farming as consumers. By consuming foods that are farmed responsibly and locally, we encourage environmentally friendly practices. Additionally, lowering consumer food waste is crucial for sustainability.\n\nIn addition to being necessary, sustainable farming offers the chance to convert our agricultural systems into examples of ecological harmony and resilience. We can help create a greener and more sustainable future for everyone by embracing sustainable practices and encouraging local, environmentally conscious agriculture.\n" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>